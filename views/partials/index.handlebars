<h2>Burgers to Eat</h2>

<ul>
  {{#each burgers}}
    {{#unless hiding}}
      {{> burgers/burger-block hiding=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
